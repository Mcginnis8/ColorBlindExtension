{
    "name": "ColorFix",
    "version": "1.0.0",
    "manifest_version": 2,
    "icons": { "16": "16Icon.ico",
           "48": "48Icon.ico",
          "128": "128Icon.ico" },
    "description": "ColorFix will shift certain color hues to fix some commonly hard to see colors for users on Chrome.",
    "background": {
        "scripts": [
            "popup.js"
        ],
        "persistent": true
    },
    "browser_action": {
        "default_title": "ColorFix",
        "default_popup": "popup.html"
    },
    "permissions": [
        "https://*/*",
        "http://*/*",
        "tabs"
    ]
}
